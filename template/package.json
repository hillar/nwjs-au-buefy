{
  "name": "{{ name }}",
  "manifestUrl": "http://localhost:{{ devport }}/{{ appsdir }}/{{ name }}/{{name}}-manifest.json",
  "crash_report_url": "http://localhost:{{ devport }}/{{ appsdir }}/{{ name }}",
  "label": "{{ label }}",
  "description": "{{ description }}",
  "version": "0.0.1",
  "author": "{{ author }}",
  "private": true,
  "main": "./{{ distdir }}/bg/bg.js",
  "node-remote": "*://localhost/*",
  "window": {
    "width": 1024,
    "height": 768
  },
  "build": {
    "files": [
      "node_modules/**/*",
      "{{ distdir }}/**/*"
    ],
    "output": "{{ releasesdir }}",
    "nwVersion": "{{ nwversion }}",
    "nwFlavor":"sdk",
    "nwPlatforms": [
      "{{ nwplatform }}"
    ],
    "nwArchs": [
      "x64"
    ]
  },
  "scripts": {
    "dev": "node build/dev-runner.js",
    "build": "node build/runner.js"
  },
  "dependencies": {
    {{#isEnabled plugins 'axios'}}
    "axios": "^0.18.0",
    {{/isEnabled}}
    "archiver": "^3.0.0",
    "buefy": "^0.7.1",
    "nw-autoupdater": "^1.1.8"
  },
  "devDependencies": {
    "ajv": "^6.5.3",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^0.11.2",
    "fs-extra": "^7.0.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.2",
    "npm-which": "^3.0.1",
    "nwjs-builder-phoenix": "^1.14.7",
    "sass-loader": "^7.0.1",
    "url-loader": "^0.6.2",
    "vue": "^2.5.17",
    "vue-loader": "^15.2.7",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.17",
    "vuex": "^3.0.1",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.2",
    "webpack-hot-middleware": "^2.22.3"
  }
}
